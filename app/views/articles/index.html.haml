-if user_signed_in?
  %p="Hello, #{current_user.first_name}!"
-else
  %p=link_to "Sign up", new_user_registration_path
  %p=link_to "Log in", new_user_session_path

%h2 Articles
- @articles.each do |article|
  %p= image_tag("article.jpg")  
  %h3= article.title
  %p= article.lede
  %p= article.author
  %p= article.created_at
